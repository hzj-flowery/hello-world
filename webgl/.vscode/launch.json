        {
            "name": "Launch index.html (disable sourcemaps)",
            "type": "chrome",
            "request": "launch",
            "runtimeArgs": ["--disable-web-security"],
            "cwd": "${workspaceRoot}",
            //选择要启动的文件
            "file": "${workspaceFolder}/bin/index.html",
            "breakOnLoad": true,
            "webRoot": "${workspaceFolder}/src",
            //下面这个可以预先启动任务
            //参数是tasks.json里某个task的label值
            "preLaunchTask": "compile" , 
        }
        
    ]
}